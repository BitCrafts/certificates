@model BitCrafts.Certificates.Controllers.CreateClientViewModel
@{
    ViewData["Title"] = "Issue Client Certificate";
}

<h1>Issue Client Certificate</h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Username" class="form-label"></label>
        <input asp-for="Username" class="form-control" placeholder="jdoe" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" placeholder="jdoe@example.com (optional)" />
        <span class="form-text">Optional. If provided, it will be included as RFC822Name in SANs.</span>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Issue</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    @Html.AntiForgeryToken()
    <partial name="_ValidationScriptsPartial" />
    @section Scripts { <partial name="_ValidationScriptsPartial" /> }
    </form>
