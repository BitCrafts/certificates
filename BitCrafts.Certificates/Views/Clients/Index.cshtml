@model IReadOnlyList<BitCrafts.Certificates.Models.CertificateRecord>
@{
    ViewData["Title"] = "Client Certificates";
}

<h1>Client Certificates</h1>

<p>
    <a class="btn btn-primary" asp-controller="Clients" asp-action="Create">Issue New Client Certificate</a>
    <a class="btn btn-outline-secondary ms-2" asp-controller="Servers" asp-action="Index">Go to Servers</a>
    <a class="btn btn-outline-secondary ms-2" asp-controller="Home" asp-action="Index">Home</a>
    </p>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info">No client certificates have been issued yet.</div>
}
else
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email SAN</th>
            <th>Not After</th>
            <th>Status</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Subject</td>
                <td>@c.SanDns</td>
                <td>@c.NotAfter</td>
                <td><span class="badge bg-secondary">@c.Status</span></td>
                <td>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@c.Id">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
