@model BitCrafts.Certificates.Presentation.ViewModels.CreateServerViewModel
@{
    ViewData["Title"] = "Issue Server Certificate";
}

<h1>Issue Server Certificate</h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Fqdn" class="form-label"></label>
        <input asp-for="Fqdn" class="form-control" placeholder="server.home.lan" />
        <span asp-validation-for="Fqdn" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="IpAddresses" class="form-label"></label>
        <textarea asp-for="IpAddresses" rows="2" class="form-control" placeholder="10.0.0.10, 10.0.0.11 (optional)"></textarea>
        <span class="form-text">Comma or space separated. Optional.</span>
        <span asp-validation-for="IpAddresses" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Issue</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    @Html.AntiForgeryToken()
    <partial name="_ValidationScriptsPartial" />
    @section Scripts { <partial name="_ValidationScriptsPartial" /> }
</form>
