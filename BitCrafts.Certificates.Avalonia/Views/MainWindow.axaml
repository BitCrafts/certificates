<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BitCrafts.Certificates.Avalonia.ViewModels"
        xmlns:views="using:BitCrafts.Certificates.Avalonia.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
        x:Class="BitCrafts.Certificates.Avalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="BitCrafts Certificate Manager"
        Width="1000" Height="700">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="200,*" RowDefinitions="*">
        <!-- Left Navigation Panel -->
        <Border Grid.Column="0" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,0,1,0">
            <StackPanel Margin="10">
                <TextBlock Text="Certificate Manager" FontSize="16" FontWeight="Bold" Margin="0,10,0,20"/>
                
                <Button Content="Certificate List" 
                        Click="ShowCertificateList_Click"
                        HorizontalAlignment="Stretch" 
                        Margin="0,5"/>
                
                <Button Content="Create Certificate" 
                        Click="ShowCreateCertificate_Click"
                        HorizontalAlignment="Stretch" 
                        Margin="0,5"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentView}">
            <ContentControl.DataTemplates>
                <DataTemplate DataType="vm:CertificateListViewModel">
                    <views:CertificateListView />
                </DataTemplate>
                <DataTemplate DataType="vm:CreateCertificateViewModel">
                    <views:CreateCertificateView />
                </DataTemplate>
                <DataTemplate DataType="vm:CertificateDetailsViewModel">
                    <views:CertificateDetailsView />
                </DataTemplate>
            </ContentControl.DataTemplates>
        </ContentControl>
    </Grid>

</Window>
