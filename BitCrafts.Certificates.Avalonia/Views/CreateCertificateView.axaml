<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BitCrafts.Certificates.Avalonia.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="BitCrafts.Certificates.Avalonia.Views.CreateCertificateView"
             x:DataType="vm:CreateCertificateViewModel">

    <Design.DataContext>
        <vm:CreateCertificateViewModel/>
    </Design.DataContext>

    <ScrollViewer>
        <StackPanel Margin="40,20" MaxWidth="600">
            <TextBlock Text="Create New Certificate" FontSize="24" FontWeight="Bold" Margin="0,0,0,30"/>

            <!-- Certificate Type Selection -->
            <TextBlock Text="Certificate Type" FontWeight="Bold" Margin="0,10,0,5"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <RadioButton Content="Server Certificate" 
                             IsChecked="{Binding CertificateType, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=Server}"
                             Command="{Binding SelectCertificateTypeCommand}"
                             CommandParameter="Server"
                             Margin="0,0,20,0"/>
                <RadioButton Content="Client Certificate" 
                             IsChecked="{Binding CertificateType, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=Client}"
                             Command="{Binding SelectCertificateTypeCommand}"
                             CommandParameter="Client"/>
            </StackPanel>

            <!-- Server Certificate Fields -->
            <Border IsVisible="{Binding CertificateType, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=Server}"
                    Padding="15" 
                    BorderBrush="#CCCCCC" 
                    BorderThickness="1" 
                    CornerRadius="4"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Server FQDN *" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Fqdn}" 
                             Watermark="server.example.com"
                             Margin="0,0,0,15"/>

                    <TextBlock Text="IP Addresses (comma-separated)" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding IpAddresses}" 
                             Watermark="192.168.1.100, 10.0.0.50"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Height="60"
                             Margin="0,0,0,15"/>
                </StackPanel>
            </Border>

            <!-- Client Certificate Fields -->
            <Border IsVisible="{Binding CertificateType, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=Client}"
                    Padding="15" 
                    BorderBrush="#CCCCCC" 
                    BorderThickness="1" 
                    CornerRadius="4"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Username *" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Username}" 
                             Watermark="john.doe"
                             Margin="0,0,0,15"/>

                    <TextBlock Text="Email (optional)" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Email}" 
                             Watermark="john.doe@example.com"
                             Margin="0,0,0,15"/>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Create Certificate" 
                        Command="{Binding CreateCertificateCommand}"
                        IsEnabled="{Binding !IsCreating}"
                        Padding="20,10"
                        Margin="0,0,10,0"/>
            </StackPanel>

            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}" 
                       Foreground="Green"
                       Margin="0,20,0,0"
                       TextWrapping="Wrap"
                       IsVisible="{Binding StatusMessage, Converter={x:Static ObjectConverters.IsNotNull}}"/>

            <!-- Loading Indicator -->
            <TextBlock Text="Creating certificate..." 
                       IsVisible="{Binding IsCreating}"
                       Foreground="Gray"
                       Margin="0,20,0,0"/>
        </StackPanel>
    </ScrollViewer>

</UserControl>
