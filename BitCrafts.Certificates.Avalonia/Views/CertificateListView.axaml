<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BitCrafts.Certificates.Avalonia.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="BitCrafts.Certificates.Avalonia.Views.CertificateListView"
             x:DataType="vm:CertificateListViewModel">

    <Design.DataContext>
        <vm:CertificateListViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="20,20,20,10">
            <TextBlock Grid.Column="0" Text="Certificates" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Grid.Column="1" Content="Refresh" Command="{Binding LoadCertificatesCommand}" Padding="15,8"/>
        </Grid>

        <!-- Filter Buttons -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,60,0,10">
            <Button Content="All" Command="{Binding FilterByKindCommand}" CommandParameter="All" Margin="5,0"/>
            <Button Content="Server" Command="{Binding FilterByKindCommand}" CommandParameter="Server" Margin="5,0"/>
            <Button Content="Client" Command="{Binding FilterByKindCommand}" CommandParameter="Client" Margin="5,0"/>
        </StackPanel>

        <!-- Certificate List -->
        <Border Grid.Row="1" Margin="20,10" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4">
            <DataGrid ItemsSource="{Binding Certificates}"
                      SelectedItem="{Binding SelectedCertificate}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="Horizontal"
                      CanUserReorderColumns="True"
                      CanUserResizeColumns="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="Kind" Binding="{Binding Kind}" Width="80"/>
                    <DataGridTextColumn Header="Subject" Binding="{Binding Subject}" Width="200"/>
                    <DataGridTextColumn Header="Not After" Binding="{Binding NotAfter, StringFormat='{}{0:yyyy-MM-dd}'}" Width="120"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Certificate Details and Actions -->
        <Border Grid.Row="2" Margin="20,10,20,20" Padding="15" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4">
            <Grid RowDefinitions="Auto,Auto" IsVisible="{Binding SelectedCertificate, Converter={x:Static ObjectConverters.IsNotNull}}">
                <StackPanel Grid.Row="0">
                    <TextBlock Text="Selected Certificate Details" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" FontWeight="Bold" Margin="0,5,10,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedCertificate.Id}" Margin="0,5"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Subject:" FontWeight="Bold" Margin="0,5,10,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedCertificate.Subject}" Margin="0,5"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Not Before:" FontWeight="Bold" Margin="0,5,10,5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedCertificate.NotBefore, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Margin="0,5"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Not After:" FontWeight="Bold" Margin="0,5,10,5"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedCertificate.NotAfter, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Margin="0,5"/>
                        
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Status:" FontWeight="Bold" Margin="0,5,10,5"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedCertificate.Status}" Margin="0,5"/>
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                    <Button Content="Revoke" 
                            Command="{Binding RevokeCertificateCommand}"
                            IsEnabled="{Binding SelectedCertificate.IsRevoked, Converter={x:Static BoolConverters.Not}}"
                            Margin="5,0"/>
                    <Button Content="Delete" 
                            Command="{Binding DeleteCertificateCommand}"
                            Margin="5,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Indicator -->
        <Border Grid.Row="0" Grid.RowSpan="3" 
                Background="#80000000" 
                IsVisible="{Binding IsLoading}">
            <TextBlock Text="Loading..." 
                       FontSize="20" 
                       Foreground="White"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>

</UserControl>
