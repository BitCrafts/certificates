<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:BitCrafts.Certificates.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="BitCrafts.Certificates.Avalonia.Views.CertificateDetailsView"
             x:DataType="vm:CertificateDetailsViewModel">

    <ScrollViewer>
        <Border Padding="20">
            <StackPanel Spacing="15">
                <TextBlock Text="Certificate Details" 
                           FontSize="20" 
                           FontWeight="Bold"/>

                <Border BorderBrush="Gray" 
                        BorderThickness="1" 
                        CornerRadius="5" 
                        Padding="15"
                        IsVisible="{Binding Certificate, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <StackPanel Spacing="10">
                        <Grid ColumnDefinitions="150,*">
                            <TextBlock Grid.Column="0" Text="ID:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="{Binding Certificate.Id}"/>
                        </Grid>

                        <Grid ColumnDefinitions="150,*">
                            <TextBlock Grid.Column="0" Text="Subject:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="{Binding Certificate.Subject}" TextWrapping="Wrap"/>
                        </Grid>

                        <Grid ColumnDefinitions="150,*">
                            <TextBlock Grid.Column="0" Text="Kind:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="{Binding Certificate.Kind}"/>
                        </Grid>

                        <Grid ColumnDefinitions="150,*">
                            <TextBlock Grid.Column="0" Text="Serial Number:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="{Binding Certificate.SerialNumber}" TextWrapping="Wrap"/>
                        </Grid>

                        <Grid ColumnDefinitions="150,*">
                            <TextBlock Grid.Column="0" Text="Thumbprint:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="{Binding Certificate.Thumbprint}" TextWrapping="Wrap"/>
                        </Grid>

                        <Grid ColumnDefinitions="150,*">
                            <TextBlock Grid.Column="0" Text="Not Before:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="{Binding Certificate.NotBefore, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}"/>
                        </Grid>

                        <Grid ColumnDefinitions="150,*">
                            <TextBlock Grid.Column="0" Text="Not After:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="{Binding Certificate.NotAfter, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}"/>
                        </Grid>

                        <Grid ColumnDefinitions="150,*">
                            <TextBlock Grid.Column="0" Text="Issued At:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="{Binding Certificate.IssuedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}"/>
                        </Grid>

                        <Grid ColumnDefinitions="150,*">
                            <TextBlock Grid.Column="0" Text="Status:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="{Binding Certificate.Status}"/>
                        </Grid>

                        <Grid ColumnDefinitions="150,*" IsVisible="{Binding Certificate.IsRevoked}">
                            <TextBlock Grid.Column="0" Text="Revoked:" FontWeight="SemiBold" Foreground="Red"/>
                            <TextBlock Grid.Column="1" Text="Yes" Foreground="Red"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <TextBlock Text="{Binding StatusMessage}"
                           TextWrapping="Wrap"
                           IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                           Margin="0,10,0,0"/>

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <Button Content="Download Certificate"
                            Command="{Binding DownloadCertificateCommand}"
                            IsEnabled="{Binding !IsProcessing}"/>

                    <Button Content="Revoke Certificate"
                            Command="{Binding ShowRevokeDialogCommand}"
                            IsEnabled="{Binding !IsProcessing}"
                            IsVisible="{Binding !Certificate.IsRevoked}"/>
                </StackPanel>

                <ProgressBar IsIndeterminate="True"
                             IsVisible="{Binding IsProcessing}"
                             Height="4"/>

                <!-- Revoke Confirmation Dialog -->
                <Border Background="#80000000"
                        IsVisible="{Binding ShowRevokeConfirmation}"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <Border Background="White"
                            Padding="20"
                            CornerRadius="5"
                            MaxWidth="400"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                        <StackPanel Spacing="15">
                            <TextBlock Text="Confirm Revocation"
                                       FontSize="18"
                                       FontWeight="Bold"/>
                            
                            <TextBlock Text="Are you sure you want to revoke this certificate? This action cannot be undone."
                                       TextWrapping="Wrap"/>

                            <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
                                <Button Content="Cancel"
                                        Command="{Binding CancelRevokeCommand}"/>
                                <Button Content="Revoke"
                                        Command="{Binding ConfirmRevokeCommand}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Border>
            </StackPanel>
        </Border>
    </ScrollViewer>
</UserControl>
